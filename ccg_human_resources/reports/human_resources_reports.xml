<?xml version="1.0"?>
<openerp>
	<data noupdate="1">

		<!-- leaves request report -->
		<record id="hr_leaves_request_ccg" model="ir.actions.report.xml">
			<field name="name">Leaves request</field>
			<field name="type">ir.actions.report.xml</field>
			<field name="model">hr.holidays</field>
			<field name="report_name">hr_leaves_request</field>
			<field name="report_type">aeroo</field>
			<field name="in_format">oo-odt</field>
			<field name="parser_loc"></field>
			<field name="report_rml">ccg_human_resources/reports/hr_leaves_request.odt</field>
			<field name="parser_state">default</field>
			<field name="tml_source">file</field>
			<field name="styles_mode">global</field>
		</record>

		<!--add button leaves request report -->
		<record model="ir.values" id="btn_print_hr_leaves_request_report">
			<field eval="'action'" name="key" />
			<field eval="'client_print_multi'" name="key2" />
			<field name="model">hr.holidays</field>
			<field name="name">Leaves request</field>
			<field name="value"
				eval="'ir.actions.report.xml,'+str(hr_leaves_request_ccg)" />
			<field name="isobject" eval="True" />
			<field name="replace" eval="False" />
		</record>
</data>
</openerp>

