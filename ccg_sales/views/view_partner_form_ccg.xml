<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_partner_form_ccg" model="ir.ui.view">
			<field name="name">view.partner.form.ccg</field>
			<field name="model">res.partner</field>
			<field name="type">form</field>
			<field name="priority">20</field>
			<field name="inherit_id" ref="sp_cadcam.view_partner_cadcam" />
			<field name="arch" type="xml">
				<xpath expr="//form[@string='Contact']/sheet/group[1]"
					position="after">
					<group>
						<field name="active" />
					</group>
				</xpath>

				<xpath
					expr="//page[@name='sales_purchases']/group/group/field[@name='active']"
					position="after">
					<field name="opt_out" />
					<field name="notify_email" widget="radio" />
				</xpath>
				
<!-- 				<xpath expr="//group[field[@name='title']]/field[last()-1]" position="after"> -->
<!-- 					<field name="priority" widget="priority" /> -->
<!-- 				</xpath> -->
				<xpath expr="//group[field[@name='website']]" position="inside">
					<field name="priority" widget="priority" />
				</xpath>
				
				<xpath expr="//td[@class='oe_kanban_title1']/div[last()]" position="after">
				<div><field name="priority" widget="priority"/></div>
				</xpath>
				
				<xpath expr="//sheet/field[@name='lang']" position="after">
					<field name="priority" widget="priority"/>
				</xpath>
				
			</field>
		</record>
	</data>
</openerp>
