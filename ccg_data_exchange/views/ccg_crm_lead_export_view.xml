<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="ccg_crm_lead_export_view">
			<field name="name">ccg_crm_lead_export_view</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="ccg_sales.crm_case_form_view_oppor_profit_ccg" />
			<field name="priority" eval="30" />
			<field name="arch" type="xml">
				<xpath expr="//notebook" position="inside">
					<page string="DS pipeline data">
						<group colspan="4" col="5">
							<group string="Additional export data" colspan="2" col="2">

								<field name="offer_name_id" string="Offer name" colspan="2"
									options="{'no_create': True, 'no_create_edit': True, 'limit':10}"
									context="{'search_default_favorite':True}" />
								<field name="contact_name_id" string="Customer contact"
									colspan="2"
									options="{'no_create': True, 'no_create_edit': True, 'limit':10}"
									domain="[('parent_id','=', partner_id)]" />
								<field name="revenue_type" colspan="2" />
								<field name="ds_expected_revenue" string="DS Revenue (EUR)"
									colspan="2" />
							</group>
							<group  colspan="1" col="1">
							</group>
							<group string="DS portal generated data" colspan="2" col="2" >
								<field name="ds_lead_id" string="DS Lead ID" colspan="2" col="2" />
<!--
							<field name="comarketing_yn" string="Comarketing" colspan="2" col="2" />  
-->	
								<field name="comet_campaign_code" string="COMET campaign code" colspan="2" col="2" />
								<field name="campaign_name" string="Campaign name" colspan="2" col="2" />
							</group>
						</group>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</openerp>