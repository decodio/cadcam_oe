<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_certificate_data_wizard" model="ir.ui.view">
            <field name="name">Add Sale Price Data</field>
            <field name="model">certificate.data.wizard</field>
            <field name="arch" type="xml">
             <form string="Add Sale Price Data">
                <sheet>
                    <group>
                        <group>
                            <field name="certificate_data_sale_ids" nolabel="1" colspan="4" required="1"/>
                        </group>
                    </group>

                </sheet>
                <footer>
                    <button name="populate_data" string="Add Sale Price Data" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <record id="action_certificate_data_wizard" model="ir.actions.act_window">
            <field name="name">Add Sale Price Data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">certificate.data.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_certificate_data_wizard"/>
            <field name="target">new</field>
        </record>
        
        </data>
        </openerp>
        
